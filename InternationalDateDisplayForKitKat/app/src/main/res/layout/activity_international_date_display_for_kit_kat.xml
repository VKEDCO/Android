<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edTxtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/idd_001"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="none|textNoSuggestions"
        android:textSize="30sp" >

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@drawable/idd_002" >

        <Button
            android:id="@+id/btnEN"
            style="@style/my_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:text="@string/btnENTxt" />

        <Button
            android:id="@+id/btnRU"
            style="@style/my_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:text="@string/btnRUTxt" />

        <Button
            android:id="@+id/btnIT"
            style="@style/my_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/btnITTxt" />

        <Button
            android:id="@+id/btnFR"
            style="@style/my_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:text="@string/btnFRTxt" />

    </LinearLayout>

</LinearLayout>
